{
  "manifest_version": 3,
  "name": "Car Price Tracker",
  "version": "1.0",
  "description": "Tracks and displays price changes for car adverts on carandclassic.com.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://www.carandclassic.com/*",
    "https://firestore.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.carandclassic.com/*"],
      "js": ["content.js"],
      "type": "module"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://www.gstatic.com; object-src 'self'"
  }
}
