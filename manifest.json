{
  "manifest_version": 3,
  "name": "Car Price Tracker",
  "version": "1.0",
  "description": "Tracks and displays price changes for car adverts on carandclassic.com.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://www.carandclassic.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.carandclassic.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "firebase/firebase-app.js",
        "firebase/firebase-firestore.js"
      ],
      "matches": ["https://www.carandclassic.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
